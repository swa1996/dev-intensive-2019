<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ru.skillbranch.devintensive.MainActivity"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/font_large_24"
            android:id="@+id/tv_text"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@drawable/bender_dance"
            android:id="@+id/iv_bender"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:layout_marginTop="@dimen/spacing_normal_16">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="Введите текст"
                android:textColor="@color/gray_light"
                android:textColorHint="@color/gray_light"
                android:paddingBottom="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_normal_16"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:layout_marginRight="@dimen/spacing_normal_16"
                android:id="@+id/et_message"
                android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:src="@drawable/ic_send_white_24dp"
                android:id="@+id/id_send"/>
    </LinearLayout>


</LinearLayout>